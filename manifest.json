{
  "manifest_version": 2,
  "name": "Shortstop",
  "version": "0.1",

  "description": "No more Youtube Shorts for you.",

  "icons": {
    "48": "icons/shortstop-48.png",
    "96": "icons/shortstop-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["shortstop.js"],
      "css": ["res/shortstop.css"]
    }
  ],

  "web_accessible_resources": [
    "res/shortstop.css"
  ]
}